        },
        {
          "name": "5. Campanhas Beneficiária",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{api_base}}/campanhas/beneficiaria/",
              "host": ["{{api_base}}"],
              "path": ["campanhas", "beneficiaria", ""]
