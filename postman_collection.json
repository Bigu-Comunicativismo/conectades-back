        {
          "name": "6. Criar Campanha",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('campanha_id', jsonData.data.id);",
                  "    console.log('✅ Campanha criada com ID:', jsonData.data.id);",
                  "}",
                  "",
                  "pm.test('Status code é 201', function () {",
                  "    pm.response.to.have.status(201);",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"titulo\": \"Campanha de Roupas {{$timestamp}}\",\n  \"descricao\": \"Arrecadação de roupas para inverno\",\n  \"data_inicio\": \"2024-01-01\",\n  \"data_fim\": \"2024-12-31\",\n  \"beneficiaria_id\": 1\n}"
            },
            "url": {
              "raw": "{{api_base}}/campanhas/criar/",
              "host": ["{{api_base}}"],
              "path": ["campanhas", "criar", ""]
            },
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{token}}"
                }
              ]
            }
          }
        }
      ]
